@article{liu_deep_2020,
	title = {Deep soccer analytics: learning an action-value function for evaluating soccer players},
	volume = {34},
	issn = {1573-756X},
	shorttitle = {Deep soccer analytics},
	url = {https://doi.org/10.1007/s10618-020-00705-9},
