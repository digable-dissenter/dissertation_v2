@inproceedings{merhej_what_2021,
	address = {New York, NY, USA},
	series = {{KDD} '21},
	title = {What {Happened} {Next}? {Using} {Deep} {Learning} to {Value} {Defensive} {Actions} in {Football} {Event}-{Data}},
