@article{fernandes_how_2020,
	title = {How do {Elite} {Soccer} {Teams} {Perform} to {Ball} {Recovery}? {Effects} of {Tactical} {Modelling} and {Contextual} {Variables} on the {Defensive} {Patterns} of {Play}},
