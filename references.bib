	author = {Michael, Olivia and Obst, Oliver and Schmidsberger, Falk and Stolzenburg, Frieder},
	editor = {Akiyama, Hidehisa and Obst, Oliver and Sammut, Claude and Tonidandel, Flavio},
	year = {2018},
	keywords = {Clustering, Conceptors, Information retrieval, Logfile analysis, Recurrent neural networks, Robotic soccer},
	pages = {120--131},
}

@article{maleki_ball_2016,
	title = {Ball {Recovery} {Consistency} as a {Performance} {Indicator} in {Elite} {Soccer}},
